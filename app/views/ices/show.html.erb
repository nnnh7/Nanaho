<h1>みんなのおすすめアイス</h1>
<h3>アイスの詳細</h3>
<div class="ice">

  <p><%= @ice.body %></p>
  <p><%= @ice.created_at %></p>
    <% if user_signed_in? %>
      <% if current_user.already_liked?(@ice) %>
        <%= button_to ice_like_path(@ice), method: :delete do %>
          <i class="fa-regular fa-heart"></i><%= @ice.likes.count %>
        <% end %>
      <% else %>
        <%= button_to ice_likes_path(@ice), method: :post do %>
          <i class="fa-solid fa-heart"></i><%= @ice.likes.count %>
        <% end %>
      <% end %>
    <% else %>
    <i class="fa-solid fa-heart"></i><%= @ice.likes.count %>
    <% end %>
  <%= link_to "編集する", edit_ice_path(@ice.id) %>
</div>

<h2>いいねしたユーザー</h2>
<% @ice.liked_users.each do |user| %>
  <li><%= user.email %></li>
<% end %>

<%= link_to "一覧に戻る", ices_path %>
